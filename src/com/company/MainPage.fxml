<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="245.0" prefWidth="266.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="com.company.MainPageController">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <HBox spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Label minHeight="20.0" minWidth="90.0" text="Введите страну:">
            <HBox.margin>
                <Insets top="4.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="countryTextField" maxWidth="185.0" minHeight="25.0" minWidth="185.0" onAction="#getServices"
                   prefHeight="25.0" prefWidth="185.0"/>
    </HBox>
    <HBox spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="50.0">
        <Label minHeight="20.0" minWidth="90.0" text="Сервисы:">
            <HBox.margin>
                <Insets top="4.0"/>
            </HBox.margin>
        </Label>
        <ComboBox fx:id="servicesComboBox" minHeight="25.0" minWidth="185.0" prefHeight="25.0" prefWidth="185.0"
                  HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ComboBox>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="95.0">
        <Button fx:id="updateButton" minHeight="25.0" minWidth="128.0" onAction="#updateCountriesWithServicesMap"
                prefHeight="25.0" prefWidth="128.0" text="Обновить данные"/>
        <ProgressBar fx:id="findProgressBar" prefHeight="18.0" prefWidth="107.0" visible="false"/>
    </HBox>
    <VBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="145.0">
        <HBox spacing="10">
            <Label minHeight="17.0" minWidth="212.0" text="Отсортировать сервисы по названию:"/>
            <RadioButton fx:id="nameAscRadioButton" text="↑" userData="nameAsc"/>
            <RadioButton fx:id="nameDescRadioButton" text="↓" userData="nameDesc"/>
        </HBox>
        <HBox spacing="10">
            <Label minHeight="17.0" minWidth="212.0" text="Отсортировать сервисы по цене:"/>
            <RadioButton fx:id="priceAscRadioButton" text="↑" userData="priceAsc"/>
            <RadioButton fx:id="priceDescRadioButton" text="↓" userData="priceDesc"/>
        </HBox>
    </VBox>
</AnchorPane>
