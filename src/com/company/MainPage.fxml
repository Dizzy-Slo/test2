<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="310.0" prefWidth="496.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="com.company.MainPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <GridPane alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  BorderPane.alignment="CENTER_LEFT">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                                   prefWidth="228.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                                   prefWidth="228.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="CENTER"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label minWidth="-Infinity" text="Введите страну:"/>
            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1">
                <TextField fx:id="countryTextField" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="99.0"
                           HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </TextField>
                <ComboBox fx:id="countriesComboBox" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
            </HBox>

            <Label minWidth="-Infinity" text="Сервисы:" GridPane.rowIndex="1"/>
            <ComboBox fx:id="servicesComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                      GridPane.rowIndex="1"/>

            <Button fx:id="updateButton" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                    onAction="#updateCountriesWithServicesMap" text="Обновить данные" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Button>
            <ProgressBar fx:id="findProgressBar" maxWidth="1.7976931348623157E308" visible="false"
                         GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Button maxWidth="1.7976931348623157E308" minWidth="-Infinity" onAction="#setPrice" text="Изменить цену"
                    GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Button>
            <TextField fx:id="setPriceTextField" onAction="#setPrice" promptText="Введите цену" GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>

            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                   text="Отсортировать сервисы по названию:" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <RadioButton fx:id="nameAscRadioButton" text="↑" userData="nameAsc"/>
                <RadioButton fx:id="nameDescRadioButton" text="↓" userData="nameDesc"/>
            </HBox>

            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                   text="Отсортировать сервисы по цене:" GridPane.rowIndex="5">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <RadioButton fx:id="priceAscRadioButton" text="↑" userData="priceAsc"/>
                <RadioButton fx:id="priceDescRadioButton" text="↓" userData="priceDesc"/>
            </HBox>
        </GridPane>
    </center>
    <bottom>
        <Button fx:id="tableViewButton" minHeight="-Infinity" minWidth="-Infinity"
                text="Открыть табличное представление">
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>
